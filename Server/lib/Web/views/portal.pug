extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div(style='float: left; width: 100%;')
		div(style='float: left; padding-left: 70px;')
			img#logo(src='/img/kkutu/short_logo.png')
		div#menu-bar(style='float: right; margin-top: 25px;')
			a(target='_blank', href='//www.youtube.com/channel/UCzFpF9wIfCXFclSND8kDj0w', style='background-color: #FF0000;')= L('sandbox')
			a(target='_blank', href='//twitter.com/TWHyusan', style='background-color: #00A5FF;')= L('CREATOR')
		div.jjoriping
				button#game-start.jjo-display= L('gameStart')
	div(style='float: right; margin-top: -120px; width: 50%;')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='position: relative; left: 400px; width: calc(57% - 4px); border: 0px solid #CCC; margin-top: 20px; background-color: #44444494;')
		iframe#kkutu-bulletin(width='90%', height='330px', src='/kkutu_bulletin.html')
	div(style='position: relative; top: -257px; left: 0px; width: calc(32.6% - 4px); border-radius: 5px solid #CCC; margin-top: 20px; background-color: #44444494;')
		iframe#kkutu_noticemain(width='90%', height='330px', src='/kkutu_noticemain.html')
	+separator(5)

block Bottom
	div.bottom-legal!= L('dictionarySupport')
	div.bottom-legal!= L('etcSupport')